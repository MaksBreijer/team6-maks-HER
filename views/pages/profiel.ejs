<!DOCTYPE html>
<html lang="nl">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="mijn-account">

    <header>
      <%- include('../partials/header'); %>
    </header>

    <main>
      <h1>Mijn account</h1>
      <section class="profile-section">
        <img src="<%= '/static/upload/' + user.profielFoto %>" alt="Profielfoto" class="profile-picture" width="300">
        <h2><%= user.name %></h2>
        <form action="/uitloggen">
          <button>Uitloggen</button>
        </form>
      </section>
      
      <div class="background-opacity-white">
        <div class="opgeslagen-artiest-column">
          <h3 class="opgeslagen-artiesten-titel">Mijn Opgeslagen Artiesten</h3> 
          
          <div id="account-opgeslagen-artiest-grid">
            <ul class="list">
              <% if (user && artiesten.length > 0) { %>
                <% artiesten.forEach(artiest => { %>
                  <li class="grid-item">
                    <form action="/opgeslagen-artiesten" method="POST">
                      <input name="artistId" value="<%= artiest.id %>" type="hidden">
                    </form>
                    <img src="<%= artiest.images[0].url %>" alt="Foto van <%= artiest.name %>">
                    <h3><span class="name"><%= artiest.name %></span></h3>
                    <p> <span class="genre">Genre: <%= artiest.genres %></span></p>
                    <p> <span class="popularity">Populariteit: <%= artiest.popularity %></span></p>
                  </li>
                <% }) %>
              <% } else { %>
                <p>Je hebt nog geen artiesten opgeslagen.</p>
              <% } %>
            </ul>
          </div>
      </div>
    </main>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
    <%- include('../partials/script'); %>
  </body>

</html>
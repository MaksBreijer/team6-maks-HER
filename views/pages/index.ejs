            <input name="artistId" id="favoInput" type="hidden">
          </form>
        </article>
        <article class="playlist">
          <a id="artiestlink" href="">Luister Op Spotify</a>
          <iframe id="kleineArtiestIframe" src="" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
        </article>
      </section>
    </main>


    <footer>
      <%- include('../partials/footer'); %>
    </footer>
    <%- include('../partials/script'); %>
    <script src="/static/javascript/indexpagina.js"></script>
  </body>
</html>

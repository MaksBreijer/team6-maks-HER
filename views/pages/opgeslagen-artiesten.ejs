<!DOCTYPE html>
<html lang="nl">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>

<header>
  <%- include('../partials/header'); %>
  <div class="shape"></div>
</header>

    <main>

            <h1>Mijn Opgeslagen Artiesten</h1>
            <form action="">
            <input type="text" class="search" placeholder="Zoek artiest...">
            </form>
            <button class="sort" data-sort="naam">Sorteer op naam</button>

            <section id="favorieten" class="account-opgeslagen-artiest-grid">
            <% if (user && user.favorieten.length > 0) { %>
                <% user.favorieten.forEach(artiest => { %>
                  <div class="grid-item">
                    <img src="<%= artiest.images %>" alt="Foto van <%= artiest.naam %>">
                    <h3 class="naam"><%= artiest.naam %></h3>
                    <p>Genre: <%= artiest.genre %></p>
                    <p>Volgers: <%= artiest.volgers %></p>
                  </div>
                <% }) %>
              <% } else { %>
                <p>Je hebt nog geen artiesten opgeslagen.</p>
              <% } %>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>
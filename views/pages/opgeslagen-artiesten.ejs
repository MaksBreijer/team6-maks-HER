<!DOCTYPE html>
<html lang="nl">
  <head>
    <%- include('../partials/head'); %>
  </head>

  <body>

<header>
  <%- include('../partials/header'); %>
  <div class="shape"></div>
</header>

    <main>
        <div class="opgeslagen-artiest-column">
            <h3>Mijn Opgeslagen Artiesten</h3>
          <section class="account-opgeslagen-artiest-grid">


            <% if (user && artiesten.length > 0) { %>
                <% artiesten.forEach(artiest => { %>
                  <div class="grid-item">
                    <img src="<%= artiest.images[0].url%>" alt="Foto van <%= artiest.name %>">
                    <h3><%= artiest.name %></h3>
                    <p>Genre: <%= artiest.genre %></p>
                    <p>popularity: <%= artiest.popularity %></p>
                  </div>
                <% }) %>
              <% } else { %>
                <p>Je hebt nog geen artiesten opgeslagen.</p>
              <% } %>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>